<!-- components/login-modal/login-modal.wxml -->
<view class="login-modal-mask" wx:if="{{show}}" bindtap="onMaskTap">
  <view class="login-modal-container" catchtap="onBubbleTap">

    <!-- 顶部装饰线 -->
    <view class="modal-top-line"></view>

    <!-- 关闭按钮 -->
    <view class="close-btn" bindtap="onClose">
      <view class="close-icon">×</view>
    </view>

    <!-- 内容区 -->
    <view class="modal-content">

      <!-- 图标 -->
      <view class="lock-icon">🔒</view>

      <!-- 标题 -->
      <view class="title">解锁完整解读</view>
      <view class="subtitle">登录后查看完整命理分析内容</view>

      <!-- 分隔线装饰 -->
      <view class="divider">
        <view class="divider-line"></view>
        <view class="divider-dot"></view>
        <view class="divider-line"></view>
      </view>

      <!-- 登录按钮 -->
      <button
        class="login-btn"
        bindtap="onLogin"
        hover-class="login-btn-hover"
      >
        <text class="btn-wechat-icon">💬</text>
        <text class="btn-text">微信快速登录</text>
      </button>

      <!-- 说明 -->
      <view class="hint-text">登录后可保存记录，继续咨询</view>

    </view>

  </view>
</view>
