/* ==================== CSS 变量 ==================== */
page {
  --primary: #c93b3a;
  --primary-light: #e45c5c;
  --primary-dark: #a82820;
  --bg: #f7f3ed;
  --bg-warm: #fbf7f2;
  --card-bg: #fffbf7;
  --text-dark: #1a1816;
  --text-medium: #3a332d;
  --text-light: #8e8174;
  --text-hint: #b8a89a;
  --border-light: rgba(142,129,116,0.15);
}

/* ==================== 页面基础 ==================== */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f7f3ed 0%, #f5ede1 100%);
  padding: 24rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  z-index: 0;
  pointer-events: none;
}

.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, rgba(201,59,58,0.03) 0%, transparent 100%);
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.04;
}

.bg-circle-1 {
  width: 500rpx;
  height: 500rpx;
  background: var(--primary);
  top: -200rpx;
  right: -150rpx;
}

.bg-circle-2 {
  width: 300rpx;
  height: 300rpx;
  background: var(--primary);
  bottom: 100rpx;
  left: -100rpx;
}

.bg-circle-3 {
  width: 200rpx;
  height: 200rpx;
  background: var(--text-light);
  top: 40%;
  right: -50rpx;
}

.top-spacer {
  min-height: 60rpx;
  flex: 1;
  max-height: 200rpx;
}

/* ==================== 卡片容器 ==================== */
.card {
  position: relative;
  z-index: 1;
  margin-top: auto;
  background: var(--card-bg);
  padding: 36rpx 28rpx 32rpx;
  border-radius: 28rpx;
  box-shadow:
    0 20rpx 60rpx rgba(26,24,22,0.08),
    0 0 0 1rpx rgba(255,255,255,0.5) inset;
  width: 100%;
  box-sizing: border-box;
}

/* ==================== Logo 区域 ==================== */
.logo-seal {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24rpx;
  animation: sealFadeIn 0.6s ease-out;
}

@keyframes sealFadeIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.seal-inner {
  width: 76rpx;
  height: 76rpx;
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow:
    0 8rpx 24rpx rgba(201,59,58,0.3),
    0 0 0 4rpx rgba(201,59,58,0.1);
  margin-bottom: 12rpx;
  position: relative;
}

.seal-inner::before {
  content: '';
  position: absolute;
  inset: 4rpx;
  border: 1rpx solid rgba(255,255,255,0.3);
  border-radius: 12rpx;
}

.seal-text {
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
  letter-spacing: 4rpx;
}

.logo-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-dark);
  letter-spacing: 6rpx;
  margin-bottom: 6rpx;
}

.logo-subtitle {
  font-size: 20rpx;
  color: var(--text-light);
  letter-spacing: 8rpx;
  font-weight: 500;
}

/* ==================== 分隔线 ==================== */
.divider {
  height: 1rpx;
  background: linear-gradient(90deg,
    transparent 0%,
    var(--border-light) 20%,
    var(--border-light) 80%,
    transparent 100%
  );
  margin-bottom: 24rpx;
}

/* ==================== 表单组 ==================== */
.field-group {
  margin-bottom: 18rpx;
  animation: fieldFadeIn 0.4s ease-out backwards;
}

.field-group:nth-child(1) { animation-delay: 0.05s; }
.field-group:nth-child(2) { animation-delay: 0.1s; }
.field-group:nth-child(3) { animation-delay: 0.15s; }
.field-group:nth-child(4) { animation-delay: 0.2s; }
.field-group:nth-child(5) { animation-delay: 0.25s; }

@keyframes fieldFadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.field-group-last {
  margin-bottom: 16rpx;
}

.field-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.field-icon {
  font-size: 28rpx;
  opacity: 0.6;
}

.field-label {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-medium);
}

/* ==================== 切换按钮组 ==================== */
.toggle-group {
  display: flex;
  gap: 12rpx;
}

.toggle-item {
  flex: 1;
  height: 64rpx;
  background: var(--bg-warm);
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.toggle-item.active {
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
  border-color: var(--primary);
  box-shadow: 0 4rpx 16rpx rgba(201,59,58,0.25);
}

.toggle-text {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-light);
  transition: color 0.2s ease;
}

.toggle-item.active .toggle-text {
  color: #fff;
  font-weight: 600;
}

/* ==================== 选择器输入框 ==================== */
.picker-box {
  height: 72rpx;
  background: var(--bg);
  border-radius: 14rpx;
  border: 2rpx solid var(--border-light);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 22rpx;
  transition: all 0.2s ease;
}

.picker-box:active {
  background: var(--bg-warm);
  border-color: var(--border-medium);
}

.picker-value {
  font-size: 28rpx;
  color: var(--text-medium);
}

.picker-arrow {
  font-size: 32rpx;
  color: var(--text-hint);
  font-weight: 300;
}

/* ==================== 文字输入框 ==================== */
.input-box {
  height: 72rpx;
  background: var(--bg);
  border-radius: 14rpx;
  border: 2rpx solid var(--border-light);
  overflow: hidden;
  transition: all 0.2s ease;
}

.input-box:focus-within {
  border-color: var(--primary);
  background: var(--bg-warm);
}

.text-input {
  width: 100%;
  height: 100%;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: var(--text-medium);
  box-sizing: border-box;
}

/* ==================== 隐私说明 ==================== */
.privacy-note {
  display: flex;
  align-items: center;
  gap: 8rpx;
  justify-content: center;
  margin-bottom: 18rpx;
  padding: 10rpx 14rpx;
  background: rgba(142,129,116,0.06);
  border-radius: 12rpx;
}

.note-icon {
  font-size: 20rpx;
  opacity: 0.5;
}

.note-text {
  font-size: 22rpx;
  color: var(--text-light);
  line-height: 1.4;
  text-align: center;
}

/* ==================== CTA 按钮 ==================== */
.cta-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
  border-radius: 20rpx;
  border: none;
  box-shadow:
    0 12rpx 32rpx rgba(201,59,58,0.35),
    0 0 0 1rpx rgba(255,255,255,0.1) inset;
  overflow: hidden;
  transition: all 0.3s ease;
}

.cta-btn::after {
  border: none;
}

.cta-btn:active:not([disabled]) {
  transform: scale(0.98);
  box-shadow:
    0 6rpx 20rpx rgba(201,59,58,0.35),
    0 0 0 1rpx rgba(255,255,255,0.1) inset;
}

.cta-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 100%;
}

.cta-text {
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
  letter-spacing: 2rpx;
}

.cta-icon {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
}

.cta-btn[disabled] {
  background: var(--bg-warm);
  box-shadow: none;
  opacity: 0.7;
}

.cta-btn[disabled] .cta-text {
  color: var(--text-hint);
}
