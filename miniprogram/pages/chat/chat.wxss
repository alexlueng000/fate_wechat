.chat { display:flex; flex-direction:column; height:100vh; }
.list { flex:1; padding:16rpx 20rpx; background:#f7f7f9; }
.msg { max-width: 80%; padding: 16rpx 20rpx; border-radius: 16rpx; margin: 12rpx 0; word-break: break-word; }
.msg.user { background:#1677ff; color:#fff; margin-left:auto; border-top-right-radius: 6rpx; }
.msg.assistant { background:#fff; color:#222; margin-right:auto; border-top-left-radius: 6rpx; box-shadow:0 2rpx 8rpx rgba(0,0,0,0.05); }

.inputBar { display:flex; gap:12rpx; padding: 16rpx; background:#fff; border-top:1rpx solid #eee; }
.ipt { flex:1; padding: 16rpx 20rpx; background:#f2f3f5; border-radius: 12rpx; }
.sendBtn { padding: 0 24rpx; border-radius: 12rpx; }

.tip { text-align:center; color:#999; font-size:24rpx; padding: 8rpx 0 16rpx; }

.toolbar {
  display: flex;
  gap: 12rpx;
  padding: 12rpx 16rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}
.toolBtn {
  padding: 0 20rpx;
  border-radius: 24rpx;
  line-height: 60rpx;
  height: 60rpx;
}
.toolBtn.danger {
  background: #f5f5f5;
  color: #c14343;
}