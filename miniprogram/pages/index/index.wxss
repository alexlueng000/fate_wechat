.page {
  min-height: 100vh;
  background: #f5ede1;
  padding: 24rpx;
  box-sizing: border-box;
}

/* ---- 卡片 ---- */
.card {
  background: #fff;
  padding: 40rpx 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 36rpx rgba(0,0,0,0.06);
  width: 100%;
  box-sizing: border-box;
}

/* 标题 */
.title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
}

.subtitle {
  text-align: center;
  font-size: 24rpx;
  color: #8e8174;
  margin-top: 8rpx;
}

/* 字段行 */
.field-row {
  margin-top: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.field-label {
  font-size: 28rpx;
  color: #444;
}

/* 按钮组 */
.btn-group {
  display: flex;
  gap: 18rpx;
}

button::after {
  border: none;
}

.btn {
  min-width: 110rpx;
  padding: 12rpx 0;
  border-radius: 999rpx;
  background: #f2f0ed;
  color: #666;
  border: 1rpx solid #ddd;
}

.btn.primary {
  background: #c93b3a;
  color: #fff;
  border-color: #c93b3a;
}

.btn.primary.alt {
  background: #e45c5c;
  border-color: #e45c5c;
}

/* 输入行 */
.input-wrap {
  margin-top: 28rpx;
  position: relative;
}

.label {
  display: block;
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.input {
  background: #f7f4f2;
  padding: 24rpx;
  font-size: 28rpx;
  border-radius: 16rpx;
}

.input-icon {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: 24rpx;
  bottom: 20rpx;
  opacity: 0.5;
}

/* CTA 按钮（完美剧中） */
.cta {
  margin-top: 40rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #c93b3a, #e45c45);
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
  text-align: center;
  border: none;
  box-shadow: 0 16rpx 32rpx rgba(201,59,58,0.28);
}
