/* pages/login/login.wxss */

/* ==================== CSS 变量 ==================== */
page {
  --primary: #c93b3a;
  --primary-light: #e45c5c;
  --primary-dark: #a82820;
  --bg: #f7f3ed;
  --bg-warm: #fbf7f2;
  --card-bg: #fffbf7;
  --text-dark: #1a1816;
  --text-medium: #3a332d;
  --text-light: #8e8174;
  --text-hint: #b8a89a;
  --border-light: rgba(142,129,116,0.15);
}

/* ==================== 页面基础 ==================== */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f7f3ed 0%, #f5ede1 100%);
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  z-index: 0;
  pointer-events: none;
}

.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, rgba(201,59,58,0.03) 0%, transparent 100%);
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.04;
}

.bg-circle-1 {
  width: 500rpx;
  height: 500rpx;
  background: var(--primary);
  top: -200rpx;
  right: -150rpx;
}

.bg-circle-2 {
  width: 300rpx;
  height: 300rpx;
  background: var(--primary);
  bottom: 100rpx;
  left: -100rpx;
}

.bg-circle-3 {
  width: 200rpx;
  height: 200rpx;
  background: var(--text-light);
  top: 40%;
  right: -50rpx;
}

/* 内容区 */
.content {
  position: relative;
  z-index: 1;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 48rpx;
}

/* ==================== Logo 印章区域 ==================== */
.logo-seal {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 8rpx;
  animation: sealFadeIn 0.6s ease-out;
}

@keyframes sealFadeIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.logo-image {
  width: 480rpx;
  height: 240rpx;
}

/* ==================== 登录提示 ==================== */
.login-hint {
  display: flex;
  align-items: center;
  gap: 10rpx;
  background: var(--card-bg);
  padding: 14rpx 24rpx;
  border-radius: 999rpx;
  margin-bottom: 60rpx;
  border: 1rpx solid var(--border-light);
  box-shadow: 0 4rpx 16rpx rgba(26,24,22,0.04);
}

.hint-icon {
  font-size: 24rpx;
}

.hint-text {
  font-size: 24rpx;
  color: var(--text-medium);
}

/* ==================== 登录按钮 ==================== */
.login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
  border-radius: 24rpx;
  border: none;
  box-shadow:
    0 12rpx 32rpx rgba(201,59,58,0.35),
    0 0 0 1rpx rgba(255,255,255,0.1) inset;
  margin-bottom: 32rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.97);
  box-shadow:
    0 6rpx 20rpx rgba(201,59,58,0.35),
    0 0 0 1rpx rgba(255,255,255,0.1) inset;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  height: 100%;
}

.btn-icon {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
}

.btn-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
  letter-spacing: 2rpx;
}

/* ==================== 用户协议 ==================== */
.agreement-tip {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  gap: 4rpx;
  margin-top: 40rpx;
}

.tip-text {
  font-size: 22rpx;
  color: var(--text-light);
}

.link-text {
  font-size: 22rpx;
  color: var(--primary);
}
