/* components/bazi-dialog/bazi-dialog.wxss */

/* 遮罩层 */
.bazi-dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(139, 119, 101, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 48rpx;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 对话框容器 */
.bazi-dialog-container {
  position: relative;
  width: 100%;
  max-width: 600rpx;
  background: linear-gradient(180deg, #F8F4EB 0%, #F5F1E8 100%);
  border-radius: 32rpx;
  box-shadow:
    0 24rpx 80rpx rgba(61, 46, 29, 0.2),
    0 0 0 1rpx rgba(196, 165, 116, 0.3);
  overflow: hidden;
  animation: slideUp 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(60rpx) scale(0.92);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* 顶部装饰线 */
.dialog-top-line {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg,
    transparent 0%,
    rgba(196, 165, 116, 0.8) 50%,
    transparent 100%
  );
}

/* 底部装饰线 */
.dialog-bottom-line {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg,
    transparent 0%,
    rgba(139, 119, 101, 0.3) 50%,
    transparent 100%
  );
}

/* 装饰角落 */
.corner {
  position: absolute;
  width: 64rpx;
  height: 64rpx;
  overflow: hidden;
  opacity: 0.15;
}

.corner-tl {
  top: 0;
  left: 0;
}

.corner-tr {
  top: 0;
  right: 0;
  transform: scaleX(-1);
}

.corner-line-1,
.corner-line-2 {
  position: absolute;
  background: #8B7765;
}

.corner-line-1 {
  width: 200%;
  height: 2rpx;
  top: 20rpx;
  left: -20rpx;
  transform: rotate(45deg);
}

.corner-line-2 {
  width: 2rpx;
  height: 200%;
  top: -20rpx;
  left: 20rpx;
  transform: rotate(45deg);
}

/* 关闭按钮 */
.close-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(61, 46, 29, 0.1);
  z-index: 10;
}

.close-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.8);
}

.close-icon {
  position: relative;
  width: 32rpx;
  height: 32rpx;
}

.close-icon::before,
.close-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 24rpx;
  height: 3rpx;
  background: #5C4D3C;
  border-radius: 2rpx;
}

.close-icon::before {
  transform: translate(-50%, -50%) rotate(45deg);
}

.close-icon::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

/* 内容区 */
.dialog-content {
  padding: 48rpx 40rpx 56rpx;
}

/* 标题 */
.dialog-header {
  text-align: center;
  margin-bottom: 48rpx;
  padding-top: 16rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 500;
  color: #3D2E1D;
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #8B7765;
  margin-top: 12rpx;
  letter-spacing: 2rpx;
}

/* 综合评分卡片 */
.score-card {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow:
    0 4rpx 20rpx rgba(61, 46, 29, 0.05),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
}

.score-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.score-label {
  font-size: 28rpx;
  color: #5C4D3C;
  font-weight: 500;
}

.score-value {
  font-size: 56rpx;
  font-weight: 300;
  color: #3D2E1D;
}

.score-percent {
  font-size: 32rpx;
  opacity: 0.6;
  font-weight: 300;
}

.score-bar-bg {
  height: 10rpx;
  background: #E8E4DA;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.score-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #C4A574 0%, #A67C52 100%);
  border-radius: 10rpx;
  animation: fillBar 0.8s ease-out 0.2s both;
}

@keyframes fillBar {
  from {
    width: 0 !important;
  }
}

.score-desc {
  font-size: 24rpx;
  color: #8B7765;
  line-height: 1.6;
  text-align: center;
}

/* 五行分布区域 */
.elements-section {
  margin-top: 32rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 32rpx;
  padding-left: 8rpx;
}

.section-bar {
  width: 6rpx;
  height: 32rpx;
  background: #C4A574;
  border-radius: 4rpx;
}

.section-title text {
  font-size: 28rpx;
  font-weight: 500;
  color: #5C4D3C;
}

/* 元素网格 */
.elements-grid {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.element-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: elementFadeIn 0.5s ease-out both;
}

.element-item:nth-child(1) { animation-delay: 0.1s; }
.element-item:nth-child(2) { animation-delay: 0.2s; }
.element-item:nth-child(3) { animation-delay: 0.3s; }
.element-item:nth-child(4) { animation-delay: 0.4s; }
.element-item:nth-child(5) { animation-delay: 0.5s; }

@keyframes elementFadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 进度环容器 */
.progress-ring {
  position: relative;
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 16rpx;
}

.progress-canvas {
  position: absolute;
  top: 0;
  left: 0;
}

.element-inner {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(180deg, #FAF8F5 0%, #F5F1E8 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow:
    inset 0 2rpx 8rpx rgba(61, 46, 29, 0.05),
    0 2rpx 8rpx rgba(61, 46, 29, 0.05);
}

.element-char {
  font-size: 36rpx;
  font-weight: 500;
}

/* 元素信息 */
.element-info {
  text-align: center;
}

.element-name {
  display: block;
  font-size: 22rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.element-percent {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #3D2E1D;
}

.percent-symbol {
  font-size: 20rpx;
  font-weight: 400;
  opacity: 0.6;
}
