.page{
  height: 100vh;
  background: #f5ede1;
  padding: 28rpx 24rpx 24rpx;
  box-sizing: border-box;

  display: flex;
  flex-direction: column;
}
/* 顶部留白控制器：你要更近就调小 */
.top-spacer{
  min-height: 60rpx;   /* 最小留白 */
  flex: 1;             /* 屏幕高就吃掉多余空间 */
  max-height: 160rpx;  /* 上限（WXSS 对 max-height 支持没问题） */
}
/* 让 card 贴底：把它推到页面底部 */
.card {
  margin-top: auto;

  background: #fff;
  padding: 60rpx 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 36rpx rgba(0,0,0,0.06);
  width: 100%;
  box-sizing: border-box;
}
/* 标题 */
.title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #2b2621;
  letter-spacing: 0.5rpx;
  line-height: 1.25;
}

.subtitle {
  text-align: center;
  font-size: 24rpx;
  color: #8e8174;
  margin-top: 10rpx;
  line-height: 1.4;
}

/* Day1：用途说明 */
.intro {
  margin-top: 20rpx;
  padding: 18rpx 20rpx;
  border-radius: 16rpx;
  background: #fbf7f2;
  color: #8e8174;
  font-size: 24rpx;
  line-height: 1.55;
  border: 1rpx solid rgba(142,129,116,0.18);
}

/* 字段行 */
.field-row {
  margin-top: 34rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.field-label {
  font-size: 28rpx;
  color: #3a332d;
  font-weight: 600;
}

/* 按钮组 */
.btn-group {
  display: flex;
  gap: 18rpx;
}

button::after {
  border: none;
}

.btn {
  min-width: 110rpx;
  padding: 12rpx 0;
  border-radius: 999rpx;
  background: #f2f0ed;
  color: #666;
  border: 1rpx solid #ddd;
  font-size: 26rpx;
  line-height: 1;
}

/* 选中态 */
.btn.primary {
  background: #c93b3a;
  color: #fff;
  border-color: #c93b3a;
}

.btn.primary.alt {
  background: #e45c5c;
  border-color: #e45c5c;
}

/* 输入行 */
.input-wrap {
  margin-top: 28rpx;
  position: relative;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #3a332d;
  font-weight: 600;
}

/* 统一的输入外观（给 picker 里的 view 和 input 都能用） */
.input{
  background: #f7f4f2;
  border-radius: 16rpx;
  border: 1rpx solid rgba(0,0,0,0.06);
  box-sizing: border-box;

  height: 88rpx;          /* 关键：统一高度 */
  line-height: 88rpx;     /* 关键：让文本垂直居中（对 view 有效） */
  padding: 0 56rpx 0 24rpx; /* 关键：不要上下 padding，用 line-height 控制 */
  font-size: 28rpx;
  color: #2b2621;
}

/* 交互提示：picker 的 view 应该像可点击控件 */
.picker-input {
  display: flex;
  align-items: center;
  min-height: 88rpx;
}

/* placeholder 风格（小程序 input 的 placeholder 颜色需要用专门属性或类配合）
   如果你用的是 placeholder-style，下面可以不写 */
.input.placeholder {
  color: rgba(43,38,33,0.45);
}

.input-icon {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: 24rpx;
  bottom: 26rpx;
  opacity: 0.45;
}

/* CTA 按钮 */
.cta {
  margin-top: 64rpx;
  width: 100%;
  height: 92rpx;
  line-height: 60rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #c93b3a, #e45c45);
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
  text-align: center;
  border: none;
  box-shadow: 0 16rpx 32rpx rgba(201,59,58,0.28);
  letter-spacing: 0.5rpx;
}

/* CTA 禁用态：必须有明显反馈，否则用户以为卡死 */
.cta[disabled] {
  background: #e3d9d1;
  box-shadow: none;
  color: rgba(255,255,255,0.85);
}

/* 可选：加载态时略微降饱和，避免“假按钮”感 */
.cta.loading {
  opacity: 0.92;
}
