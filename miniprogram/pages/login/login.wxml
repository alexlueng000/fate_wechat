<view class="page">
  <!-- 背景装饰 -->
  <view class="bg-decoration">
    <view class="bg-circle bg-circle-1"></view>
    <view class="bg-circle bg-circle-2"></view>
    <view class="bg-circle bg-circle-3"></view>
    <view class="bg-gradient"></view>
  </view>

  <!-- 内容区 -->
  <view class="content">

    <!-- Logo/印章区域 -->
    <view class="logo-seal">
      <view class="seal-inner">
        <text class="seal-text">一盏</text>
      </view>
      <view class="logo-title">一盏大师</view>
      <view class="logo-subtitle">知命 · 达命 · 造命</view>
    </view>

    <!-- 登录提示 -->
    <view class="login-hint">
      <text class="hint-icon">🔐</text>
      <text class="hint-text">登录解锁完整AI解读功能</text>
    </view>

    <!-- 微信登录按钮 -->
    <button class="login-btn" bindtap="onConfirmLogin">
      <view class="btn-content">
        <text class="btn-icon">✦</text>
        <text class="btn-text">微信一键登录</text>
      </view>
    </button>

    <!-- 用户协议 -->
    <view class="agreement-tip">
      <text class="tip-text">登录即表示同意</text>
      <text class="link-text" bindtap="onAgreement">《用户协议》</text>
      <text class="tip-text">和</text>
      <text class="link-text" bindtap="onPrivacy">《隐私政策》</text>
    </view>

  </view>
</view>
