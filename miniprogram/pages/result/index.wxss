/* pages/result/index.wxss */

/* -------- 页面基底 -------- */
.page{
  min-height: 100vh;
  background: #f5ede1;
  padding: 24rpx;
  box-sizing: border-box;
}

/* -------- 首屏：hero -------- */
.hero{
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 28rpx 26rpx;
  box-shadow: 0 12rpx 36rpx rgba(0,0,0,0.06);
}

.hero-title{
  font-size: 26rpx;
  color: #8e8174;
  letter-spacing: 1rpx;
}

.hero-tags{
  margin-top: 14rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag{
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  background: #fbf6f0;
  color: #7a6d62;
  font-size: 24rpx;
  border: 1rpx solid #f0e6db;
}

.hero-one{
  margin-top: 16rpx;
  font-size: 30rpx;
  line-height: 1.55;
  color: #2f2a26;
  font-weight: 600;
}

/* -------- 阶段：current/next -------- */
.stage{
  margin-top: 18rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx 24rpx 22rpx;
  box-shadow: 0 12rpx 36rpx rgba(0,0,0,0.06);
}

.stage-title{
  font-size: 26rpx;
  color: #8e8174;
}

.stage-cards{
  margin-top: 16rpx;
  display: flex;
  gap: 14rpx;
}

.stage-card{
  flex: 1;
  background: #faf7f3;
  border: 1rpx solid #efe6db;
  border-radius: 18rpx;
  padding: 18rpx 18rpx 16rpx;
  box-sizing: border-box;
}

.stage-h{
  font-size: 24rpx;
  color: #8e8174;
}

.stage-v{
  margin-top: 10rpx;
  font-size: 34rpx;
  font-weight: 700;
  color: #2f2a26;
  letter-spacing: 2rpx;
}

.stage-s{
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6f6359;
}

/* -------- CTA -------- */
.cta{
  margin-top: 20rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #c93b3a, #e45c45);
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
  text-align: center;
  border: none;
  box-shadow: 0 16rpx 32rpx rgba(201,59,58,0.28);
}

.cta-sub{
  margin-top: 12rpx;
  text-align: center;
  font-size: 24rpx;
  color: #8e8174;
}

/* -------- 专业细节区域 -------- */
.detail{
  margin-top: 18rpx;
}

.summary{
  background: #ffffff;
  border-radius: 20rpx;
  padding: 18rpx 18rpx;
  box-shadow: 0 10rpx 28rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sum-left{
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.sum-title{
  font-size: 26rpx;
  color: #2f2a26;
  font-weight: 700;
}

.sum-toggle{
  font-size: 24rpx;
  color: #c93b3a;
  font-weight: 600;
}

/* 摘要四柱 pill */
.sum-pillars{
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  align-items: center;
}

.p-tag{
  font-size: 22rpx;
  color: #9b8f85;
  padding: 6rpx 10rpx;
  background: #fbf6f0;
  border-radius: 10rpx;
  border: 1rpx solid #f0e6db;
}

.p-val{
  font-size: 24rpx;
  color: #2f2a26;
  font-weight: 700;
  margin-right: 6rpx;
}

/* 展开后的卡片 */
.card{
  margin-top: 12rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 22rpx;
  box-shadow: 0 12rpx 36rpx rgba(0,0,0,0.06);
}

/* -------- 四柱表格 -------- */
.table{
  overflow: hidden;
  border-radius: 16rpx;
  border: 1rpx solid #efe6db;
}

.thead{
  display: flex;
  background: #fbf6f0;
  border-bottom: 1rpx solid #efe6db;
}

.th{
  flex: 1;
  padding: 18rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #6f6359;
  font-weight: 700;
}

.th.first{
  flex: 1.1;
}

.trow{
  display: flex;
  border-bottom: 1rpx solid #f1ebe2;
}

.trow:last-child{
  border-bottom: none;
}

.td{
  flex: 1;
  padding: 18rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #2f2a26;
}

.td.first{
  flex: 1.1;
  color: #8e8174;
  font-weight: 700;
  background: #fcfaf7;
}

/* -------- 大运 -------- */
.section{
  margin-top: 18rpx;
}

.sec-title{
  font-size: 26rpx;
  font-weight: 800;
  color: #2f2a26;
  margin-bottom: 12rpx;
}

.luck-grid{
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.luck-card4{
  width: calc((100% - 24rpx) / 3);
  background: #faf7f3;
  border: 1rpx solid #efe6db;
  border-radius: 18rpx;
  padding: 18rpx 12rpx 16rpx;
  box-sizing: border-box;
}

.luck-ganzhi{
  display: block;
  text-align: center;
  font-size: 28rpx;
  font-weight: 800;
  color: #c93b3a;
  letter-spacing: 2rpx;
}

.luck-age{
  margin-top: 8rpx;
  display: block;
  text-align: center;
  font-size: 22rpx;
  color: #6f6359;
}

/* -------- 兼容 button 默认边框 -------- */
button::after{
  border: none;
}
