.page {
  background: #f7f3ea;
  min-height: 100vh;
  padding: 16rpx;
  box-sizing: border-box;
}

/* 聊天区 */
.chat {
  height: calc(100vh - 420rpx); /* 保证上面有空间给快捷按钮和输入栏 */
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, .06);
  padding: 16rpx;
  box-sizing: border-box;
}

.chat-inner {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

/* 气泡布局 */
.msg {
  display: flex;
  width: 100%;
}

.msg.left {
  justify-content: flex-start;
}

.msg.right {
  justify-content: flex-end;
}

.bubble {
  max-width: 82%;
  padding: 16rpx 18rpx;
  border-radius: 16rpx;
  white-space: pre-wrap;
  line-height: 1.7;
}

.msg.left .bubble {
  background: #fffaf0;
  border: 1rpx solid #f0ddc0;
  color: #333;
}

.msg.right .bubble {
  background: #b83227;
  color: #fff;
}

.bubble-text {
  font-size: 26rpx;
}

/* 快捷分析 */
.card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 10rpx 28rpx rgba(0, 0, 0, .06);
  padding: 22rpx;
  margin-top: 18rpx;
}

.quick-card {
  border: 2rpx solid #f3e7df;
}

.quick-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 14rpx;
}

.quick-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.quick-chip {
  background: #fffdfb;
  border: 2rpx dashed #f0cfc3;
  color: #b05544;
  border-radius: 20rpx;
  padding: 16rpx 0;
  text-align: center;
  font-size: 24rpx;
}

/* 输入区 + 发送按钮 */
.inputBar {
  margin-top: 18rpx;
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.ipt {
  flex: 1;
  background: #fff;
  border-radius: 999rpx;
  padding: 18rpx 24rpx;
  font-size: 26rpx;
  border: 1rpx solid #eee;
}

.sendBtn {
  flex: 0 0 auto;
  padding: 0 40rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: #b83227;
  color: #fff;
  border-radius: 999rpx;
  font-weight: 700;
  font-size: 28rpx;
  box-shadow: 0 8rpx 20rpx rgba(184, 50, 39, .25);
}

/* 免责声明 */
.tip {
  margin-top: 12rpx;
  text-align: center;
  font-size: 22rpx;
  color: #9a8f86;
}
