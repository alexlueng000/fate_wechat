/* pages/result/index.wxss */

/* ==================== CSS 变量 ==================== */
page {
  --primary: #c93b3a;
  --primary-light: #e45c5c;
  --primary-dark: #a82820;
  --bg: #f7f3ed;
  --bg-warm: #fbf7f2;
  --card-bg: #fffbf7;
  --text-dark: #1a1816;
  --text-medium: #3a332d;
  --text-light: #8e8174;
  --text-hint: #b8a89a;
  --border-light: rgba(142,129,116,0.15);
}

/* ==================== 页面基础 ==================== */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f7f3ed 0%, #f5ede1 100%);
  padding: 24rpx;
  padding-top: 100rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* ==================== 顶部导航栏 ==================== */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: rgba(247, 243, 237, 0.95);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  z-index: 100;
  border-bottom: 1rpx solid rgba(142,129,116,0.1);
}

.nav-back {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 12rpx 16rpx;
  margin-left: -16rpx;
}

.nav-back-icon {
  font-size: 40rpx;
  color: var(--primary);
  font-weight: 300;
  line-height: 1;
}

.nav-back-text {
  font-size: 28rpx;
  color: var(--primary);
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  z-index: 0;
  pointer-events: none;
}

.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 40%;
  background: linear-gradient(180deg, rgba(201,59,58,0.04) 0%, transparent 100%);
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.03;
}

.bg-circle-1 {
  width: 400rpx;
  height: 400rpx;
  background: var(--primary);
  top: 100rpx;
  right: -100rpx;
}

.bg-circle-2 {
  width: 250rpx;
  height: 250rpx;
  background: var(--primary);
  bottom: 200rpx;
  left: -80rpx;
}

/* ==================== 通用卡片 ==================== */
.card {
  position: relative;
  z-index: 1;
  background: var(--card-bg);
  border-radius: 28rpx;
  padding: 32rpx 28rpx;
  box-shadow:
    0 16rpx 48rpx rgba(26,24,22,0.06),
    0 0 0 1rpx rgba(255,255,255,0.5) inset;
  margin-bottom: 16rpx;
  animation: cardFadeIn 0.5s ease-out backwards;
}

.card:nth-child(2) { animation-delay: 0.1s; }
.card:nth-child(3) { animation-delay: 0.2s; }

@keyframes cardFadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ==================== 命盘头部卡片 ==================== */
.hero-card {
  text-align: center;
}

/* 八字印章 */
.bazi-seal {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.seal-inner {
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow:
    0 8rpx 24rpx rgba(201,59,58,0.25),
    0 0 0 4rpx rgba(201,59,58,0.08);
  position: relative;
}

.seal-inner::before {
  content: '';
  position: absolute;
  inset: 3rpx;
  border: 1rpx solid rgba(255,255,255,0.25);
  border-radius: 16rpx;
}

.seal-text {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  letter-spacing: 2rpx;
}

.seal-label {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: var(--text-light);
  letter-spacing: 4rpx;
}

/* 关键词标签 */
.hero-tags {
  display: flex;
  justify-content: center;
  gap: 10rpx;
  flex-wrap: wrap;
  margin-bottom: 18rpx;
}

.hero-tag {
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, rgba(201,59,58,0.08) 0%, rgba(201,59,58,0.04) 100%);
  border: 1rpx solid rgba(201,59,58,0.15);
  border-radius: 24rpx;
  font-size: 26rpx;
  color: var(--primary);
  font-weight: 600;
  letter-spacing: 2rpx;
}

/* 一句话解读 */
.hero-desc {
  font-size: 28rpx;
  line-height: 1.7;
  color: var(--text-medium);
  padding: 0 8rpx;
}

/* ==================== 阶段卡片 ==================== */
.stage-card {
  padding: 28rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.section-icon {
  font-size: 26rpx;
}

.section-title {
  font-size: 24rpx;
  color: var(--text-light);
  letter-spacing: 2rpx;
}

.dayun-row {
  display: flex;
  gap: 12rpx;
}

.dayun-item {
  flex: 1;
  background: var(--bg);
  border-radius: 20rpx;
  padding: 20rpx 16rpx;
  text-align: center;
  border: 2rpx solid var(--border-light);
  transition: all 0.3s ease;
}

.dayun-item.current {
  background: linear-gradient(135deg, rgba(201,59,58,0.06) 0%, rgba(201,59,58,0.02) 100%);
  border-color: rgba(201,59,58,0.2);
  box-shadow: 0 4rpx 16rpx rgba(201,59,58,0.1);
}

.dayun-label {
  font-size: 22rpx;
  color: var(--text-light);
  margin-bottom: 8rpx;
}

.dayun-ganzhi {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary);
  letter-spacing: 4rpx;
  margin-bottom: 6rpx;
}

.dayun-range {
  font-size: 22rpx;
  color: var(--text-hint);
}

/* ==================== CTA 按钮 ==================== */
.cta-primary {
  width: 100%;
  height: 92rpx;
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
  border-radius: 24rpx;
  border: none;
  box-shadow:
    0 12rpx 32rpx rgba(201,59,58,0.3),
    0 0 0 1rpx rgba(255,255,255,0.1) inset;
  margin-top: 20rpx;
  overflow: hidden;
  animation: ctaFadeIn 0.6s ease-out 0.3s backwards;
}

@keyframes ctaFadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.cta-primary::after {
  border: none;
}

.cta-primary:active {
  transform: scale(0.97);
  box-shadow:
    0 6rpx 20rpx rgba(201,59,58,0.3),
    0 0 0 1rpx rgba(255,255,255,0.1) inset;
}

.cta-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  height: 100%;
}

.cta-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
  letter-spacing: 4rpx;
}

.cta-icon {
  font-size: 28rpx;
  color: rgba(255,255,255,0.8);
}

.cta-hint {
  text-align: center;
  font-size: 22rpx;
  color: var(--text-light);
  margin-top: 12rpx;
  letter-spacing: 2rpx;
}

/* ==================== 分享按钮 ==================== */
.share-btn {
  width: 100%;
  height: 76rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  border-radius: 20rpx;
  background: var(--card-bg);
  color: var(--text-medium);
  font-size: 26rpx;
  font-weight: 500;
  border: 2rpx solid var(--border-light);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
  margin-top: 14rpx;
  animation: ctaFadeIn 0.6s ease-out 0.35s backwards;
}

.share-btn::after {
  border: none;
}

.share-btn:active {
  transform: scale(0.97);
  background: var(--bg-warm);
}

.share-icon {
  font-size: 24rpx;
  color: var(--primary);
}

/* ==================== 详情折叠区 ==================== */
.detail-section {
  margin-top: 20rpx;
  position: relative;
  z-index: 1;
  animation: ctaFadeIn 0.6s ease-out 0.4s backwards;
}

.detail-toggle {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow:
    0 8rpx 24rpx rgba(26,24,22,0.04),
    0 0 0 1rpx rgba(255,255,255,0.5) inset;
}

.detail-left {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.detail-title {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-medium);
}

.detail-pillars {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.pillar-mini {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 4rpx 8rpx;
  background: var(--bg);
  border-radius: 8rpx;
}

.pillar-label {
  font-size: 20rpx;
  color: var(--text-light);
}

.pillar-value {
  font-size: 22rpx;
  font-weight: 600;
  color: var(--text-dark);
}

.detail-arrow {
  font-size: 20rpx;
  color: var(--primary);
  transition: transform 0.3s ease;
}

.detail-arrow.open {
  transform: rotate(180deg);
}

/* 展开的详情卡片 */
.detail-card {
  max-height: 0;
  overflow: hidden;
  margin-top: 0;
  background: var(--card-bg);
  border-radius: 0 0 24rpx 24rpx;
  box-shadow:
    0 8rpx 24rpx rgba(26,24,22,0.04);
  transition: all 0.3s ease;
}

.detail-card.open {
  max-height: 2000rpx;
  margin-top: 12rpx;
  padding: 24rpx;
  border-radius: 24rpx;
}

/* 四柱表格 */
.pillar-table {
  overflow: hidden;
  border-radius: 16rpx;
  border: 1rpx solid var(--border-light);
}

.table-head {
  display: flex;
  background: linear-gradient(180deg, var(--bg-warm) 0%, var(--bg) 100%);
  border-bottom: 1rpx solid var(--border-light);
}

.th {
  flex: 1;
  padding: 16rpx 0;
  text-align: center;
  font-size: 22rpx;
  color: var(--text-light);
  font-weight: 600;
}

.th.first {
  flex: 1.1;
  background: rgba(142,129,116,0.06);
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid rgba(142,129,116,0.08);
}

.table-row:last-child {
  border-bottom: none;
}

.td {
  flex: 1;
  padding: 18rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: var(--text-dark);
  font-weight: 500;
}

.td.first {
  flex: 1.1;
  color: var(--text-light);
  background: rgba(142,129,116,0.03);
}

/* 大运区块 */
.dayun-section {
  margin-top: 20rpx;
}

.dayun-section-title {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-medium);
  margin-bottom: 12rpx;
  padding-left: 4rpx;
}

.dayun-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.dayun-grid-item {
  width: calc((100% - 20rpx) / 3);
  background: var(--bg);
  border-radius: 16rpx;
  padding: 16rpx 8rpx;
  text-align: center;
  border: 1rpx solid var(--border-light);
}

.grid-ganzhi {
  display: block;
  font-size: 26rpx;
  font-weight: 700;
  color: var(--primary);
  letter-spacing: 2rpx;
  margin-bottom: 6rpx;
}

.grid-range {
  display: block;
  font-size: 20rpx;
  color: var(--text-hint);
}

/* 兼容 button 默认边框 */
button::after {
  border: none;
}
